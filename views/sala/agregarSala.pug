extends ../layout

block content
    .col-sm-9#form
        h3 AGREGAR SALA
        hr
        br
        .card
            .card-body  
                form(method="POST", action="/agregarSala" )
                    .row
                        .col-sm-3
                            label Seleccione la sede
                            br
                            select(name='id_sede', class="form-control", id="id_sede")
                                -for(let i = 0; i < sede.length; i++)
                                    option(value=sede[i].id_sede) #{sede[i].ubicacion}
                        .col-sm-3
                            label Número de sala
                            br
                            input(type="number", name="id_sala", id="id_sala", class="form-control")
                        .col-sm-3
                            label Tecnología de la sala
                            br
                            input(type="text", name="tipo_formato", id="tipo_formato", class="form-control")
                        .col-sm-3
                            label Tipo de sala
                            br
                            input(type="text", name="tipo_sala", id="tipo_sala", class="form-control")
                    br
                    button.btn.btn-primary.btn-lg(type="submit", style="position:relative; left:45%;" ) Agregar