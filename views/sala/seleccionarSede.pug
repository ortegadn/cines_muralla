extends layout

block content
    .col-sm-9#form
        h3 SELECCIONAR SEDE
        hr
        br
        .card
            .card-body  
                form(method="POST", action="/seleccionarSede" )
                    .row
                        .col-sm-3
                            select(name='id_sede', class="form-control", id="id_sede")
                                -for(let i = 0; i < sede.length; i++)
                                    option(value=sede[i].id_sede) #{sede[i].id}
                    br
                    button.btn.btn-primary.btn-lg(type="submit", style="position:relative; left:45%;" ) Eliminar