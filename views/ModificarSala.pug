extends layout

block content

    .col-sm-9#form
        h3 MODIFICAR SALA 
        hr
        br
        .card
            .card-body
                form(method="POST", action="/modificarSede" )
                    .row
                        .col-sm-3
                            label Sede de la sala a ser modificada
                            br
                            select(name='sede', class="form-control", id="titulo")
                                //- -for(let i = 0; i < pelicula.length; i++)
                                    //-option(value=pelicula[i].titulo) #{pelicula[i].titulo}
                        .col-sm-3
                            label(for='genero') tipo :
                            select(name='tipo', class="form-control", id="genero")
                                option(value="normal") normal
                                option(value="premium") premium 
                        .col-sm-3
                            label(for='genero') tecnologia :
                            select(name='tipo', class="form-control", id="genero")
                                option(value="normal") normal
                                option(value="premium") 3D 
                                option(value="premium") 4D
                                option(value="premium") IMax
                                option(value="premium") Atmos
                        .col-sm-3
                            label filas
                            br
                            input(type='number' value='1' min='1' max='23' step='1')
                        .col-sm-3
                            label columnas 
                            br
                            input(type='number' value='1' min='1' max='23' step='1')
                        .col-sm-3
                            label pasillos
                            br
                            input(type='number' value='1' min='1' max='3' step='1')
                        
                        
                    br
                    button.btn.btn-primary.btn-lg(type="submit", style="position:relative; left:45%;" ) Modificar Sala 