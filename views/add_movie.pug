extends layout

block content

  .main-container
    .row
      .col-md-6.col-md-offset-3
        h2 AGREGAR PELÍCULA

        // register form
        form(method='POST' action='/agregarPelicula')
          div.form-group
            label(for='title') Título:
            input#title.form-control(type='text', name='title')
          div.form-group
            label(for='description') Descripción:
            input#description.form-control(type='text', name='description')
          div.form-group
            label(for='duracion') Duracion:
            input#duracion.form-control(type='number', placeholder = 'Minutos' name='duracion')
          div.form-group
            label(for='genero') Genero:
            select#genero.form-control(name='duracion')
              option(value="A") A
              option(value="B") B
              option(value="C") C
              option(value="D") D
          div.form-group
            label(for='fecha_estreno') Fecha de estreno:
            input#fecha_estreno.form-control(type='date',  name='fecha_estreno')
          button.btn.btn-primary(type='submit') Agregar
  
  