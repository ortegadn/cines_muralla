extends ../layout


block content
    .col-sm-9#form(style="max-width: 100%;")
        hr
        h3 Crear combo 
        br
        .card
            .card-body  
                form(method="POST", action='/crear-combo#' )
                    .row
                        .col-sm-3
                            br
                            label Nombre del combo 
                            br
                            input(type='text', name="nombre_combo", id="nombre_combo",class="form-control", value = comboName)
                        .col-sm-3
                            label Seleccione los productos que desea agregar al combo 
                            br           
                            select(name='id_comida', class="form-control", id= 'id_comida')
                                -for(let i = 0; i < comida.length; i++)
                                    option(value = comida[i].id_comida) #{comida[i].nombre_comida}
                        .col-sm-3
                        -if(comidasSelec != null)
                            .col-sm-3
                                table.table.bg-white(style="width: 100%")
                                    thead
                                    tr(style="text-align:center;")
                                        th(scope='col') ID Comida
                                        th(scope='col') Nombre Combo
                                    tbody
                                    -for(let i = 0; i < comidasSelec.length; i++)
                                        tr(style="text-align:center;")
                                            th(scope='row')
                                                h5 #{comidasSelec[i].id_comida}
                                            th(scope='row')
                                                h5 #{comidasSelec[i].nombre_combo}
                    .row
                        .col-sm-3
                            br
                            button.btn.btn-primary.btn-lg(type="submit") Seleccionar

                form(method="POST", action='/agregar-lista-comida' )
                    br
                    button.btn.btn-primary.btn-lg(type="submit") Agregar Combo
                                