extends ../layout

block content
    .col-sm-9#form
        h3 Eliminar comida de combo
        hr
        br
        .card
            .card-body  
                form(method="POST", action="/delete-combo" )
                    .row
                        .col-sm-3
                            select(name='id_combo_comida', class="form-control", id="id_combo_comida", style="width: 200%;")
                                -for(let i = 0; i < comboC.length; i++)
                                    option(value=comboC[i].id_combo_comida) Combo: #{comboC[i].combo.nombre_combo} / Comida: #{comboC[i].comida.nombre_comida}
                    br
                    button.btn.btn-primary.btn-lg(type="submit", style="position:relative; left:45%;" ) Eliminar