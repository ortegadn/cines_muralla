extends ../layout

block content
    .col-sm-9#form
        h3 ELIMINAR COMIDA
        hr
        br
        .card
            .card-body  
                form(method="POST", action="/delete-comida" )
                    .row
                        .col-sm-3
                            select(name='id_comida', class="form-control", id="id_comida")
                                -for(let i = 0; i < comida.length; i++)
                                    option(value=comida[i].id_comida) #{comida[i].nombre_comida}
                    br
                    button.btn.btn-primary.btn-lg(type="submit", style="position:relative; left:45%;" ) Eliminar


